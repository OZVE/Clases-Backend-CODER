<link rel="stylesheet" href="css/estilos.css">
<script src="/socket.io/socket.io.js"></script>

<h1 class="alert alert-success">
    Welcome {{name}}
    <button class="btn btn-warning float-right mt-2" onclick="location.href='/logout'">
        Logout
    </button>
</h1>

<div class="jumbotron">
    <h1>Introduce Product</h1>
    <br>

    <!-- <form action="/api/products/guardar" method="POST" autocomplete="off"> -->
    <form autocomplete="off">
        <!-- name field -->
        <div class="form-group">
            <label for="name">Name</label>
            <input id="name" class="form-control" type="text" name="title" required>
        </div>

        <!-- price field -->
        <div class="form-group">
            <label for="price">Price</label>
            <input id="price" class="form-control" type="number" step="0.01" name="price" required>
        </div>

        <!-- url thumbnail field -->
        <div class="form-group">
            <label for="thumbnail">thumbnail URL</label>
            <input id="thumbnail" class="form-control" type="url" name="thumbnail">
        </div>

        <!-- Send button -->
        <button class="btn btn-success mt-3">Send</button>
    </form>

    <div class="mt-5" id="data"></div>
</div>


<div class="jumbotron" id="centro-mensajes">
    <h1>Chat center (Compresi√≥n: <span id="compresion-info"></span>%)</h1>
    <br>
    <input type="text" id="username" class="form-control w-50 my-2 mr-2" placeholder="Username">
    <input type="text" id="firstname" class="form-control w-50 my-2 mr-2" placeholder="Name">
    <input type="text" id="lastname" class="form-control w-50 my-2 mr-2" placeholder="Lastname">
    <input type="text" id="age" class="form-control w-50 my-2 mr-2" placeholder="age">
    <input type="text" id="alias" class="form-control w-50 my-2 mr-2" placeholder="alias">
    <input type="text" id="avatar" class="form-control w-50 my-2 mr-2" placeholder="avatar (url)">
    <hr>
    <div id="messages"></div>

    <form class="form-inline mt-3" onsubmit="addMessage(event)" autocomplete="off">
        <input disabled type="text" id="text" class="form-control my-2 mr-2" placeholder="Write your message...">
        <input disabled id="enviar" class="btn btn-primary my-2" type="submit" value="Send!">
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
<script src="js/handlebars-v4.7.6.js"></script>
<script src="js/main.js"></script>
<script src="js/chat.js"></script>
