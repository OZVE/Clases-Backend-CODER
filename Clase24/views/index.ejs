<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>Listado productos</title>
    <script src="/socket.io/socket.io.js"></script>
  <script src="/main.js"></script>
  <!-- <link rel="shortcut icon" href="#" /> -->
  </head>
  <body>
    <div class="col-md-10 mx-auto">
      <div class="card text-center">
        <div class="card-header">
            <!-- Title -->
          <h1>Products</h1>
        </div>
        <div class="card-header">
            <!-- Subtitle -->
          <h3>Talk about the products</h3>
        </div>
       
        <div class="container pt-3">
          <div class="row  d-flex justify-content-center ">
            <div class="col-10 pb-3">
              <form onsubmit="return addMensaje(this)">
                <div class="row g-3">
                  <strong>Who are you?</strong>
                  <div class="col-3">
                    <input type="text" name="email" class="form-control" placeholder="Email@gmail.com" aria-label="Email" id="id">
                  </div>
                  <div class="col-3">
                    <input type="text" name="Name" class="form-control" placeholder="Name" aria-label="Name" id="Name">
                 </div>      
                  <div class="col-3">
                    <input type="text" name="LastName" class="form-control" placeholder="LastName" aria-label="LastName" id="LastName">
                 </div>    
                  <div class="col-3">
                    <input type="number" name="Age" class="form-control" placeholder="Age" aria-label="Age" id="Age">
                  </div>
                  <div class="col-3">
                    <input type="text" name="Alias" class="form-control" placeholder="Alias" aria-label="Alias" id="Alias">
                  </div><div class="col-3">
                    <input type="text" name="Avatar" class="form-control" placeholder="Avatar" aria-label="Avatar" id="Avatar">
                  </div>
                  <div class="col-sm">
                    <input type="text" name="opinion" class="form-control" placeholder="talk about our products" aria-label="opinion" id="text">
                  </div>
                  <div class="col-1">
                    <input type="submit" class="btn btn-primary" value="send">
                  </div>
              </form>
              <div>
                <div id="visitas"></div>
              </div>
              <div>
                <div id="mensajes" style="width:800px; height:300px; overflow: scroll;">
            </div>
            </div>
          </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
  </body>
</html>